{
    "name": "Youtube Title",
    "manifest_version": 2,
    "version": "1.0",
    "description": "Youtubeでタイトルをポップアップで表示する",

    "permissions": [
        "http://i.ytimg.com/vi/*",
        "tabs",
        "https://www.youtube.com/*",
        "notifications"
    ],
    "browser_action": {
        "default_icon": "song.png",
        "default_title": "Popup Extension",
        "default_popup": "popup.html"
    },



    "background": {
        "scripts": ["myscript.js"]
    }
}
